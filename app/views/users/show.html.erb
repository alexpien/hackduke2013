
<h2>Profile</h2>

<h3>
  <strong>Name:</strong>
  <%= @user.name %>
</h3>

<h3>
  <strong>Email:</strong>
  <%= @user.email %>
</h3>

<p> <%= link_to 'Edit', edit_user_path(@user), {:class=>"btn btn-large btn-link"}  %></p>

<ul class="thumbnails">
  <% @user.stashes.each do |stash| %>
  <li class="span4">
    <a href="/stash/<%= stash.id%>" class="thumbnail">
      <img alt="" style="width:300px;height:300px;">
    </a>
  <div class="caption">
    <h3> <%= stash.name %> </h3>
  </div>
  </li>
  <% end %>
   
</ul>

  <%= render partial:"stash/stash_form" %>
