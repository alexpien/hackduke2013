<%= form_for(@stash) do |f|%>
<div class="form-group">
  <%= f.text_field(:name, {:placeholder=>"Name",:class=>"form-control"}) %>
</div>
<div class="form-group">
  <%= f.text_area(:comment, {:placeholder=>"Description",:class=>"form-control"}) %>
</div>
<div class="form-group">
  <%= f.submit("Update",  :class=>"btn btn-success") %>
</div>
<% end %>