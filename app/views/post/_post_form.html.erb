<%stashes=Stash.where(user_id: current_user.id)%>
<% if stashes.length==0%>
<%=link_to "You don't have a stash!", user_path(current_user.id)%>
<%else%>
<%= form_tag("/users/newpost", :method => "post", :class=>"navbar-form navbar-right") do %>
<div class="form-group">
  <%= text_field_tag(:url, nil, {:placeholder=>"URL",:class=>"form-control"}) %>
</div>
<div class="form-group">
	<%=collection_select(:stash, :id, stashes, :id, :name, {}, :class =>"form-control")%>
	</div>
<div class="form-group">
  <%= submit_tag("Add",  :class=>"btn btn-success") %>
</div>
<% end %>
<%end%>
