<%= form_tag url_for(:controller=>"sessions", :action=>"create") do %> 
 
 <% if flash[:notice] %>  
 <div class="alert alert-danger">
 	<%=flash[:notice]%>
 </div>
  <% end %>  

<div class="form-group">
<%= text_field_tag :name, nil, {:class=>"form-control",:placeholder=>"Username"} %>  
</div>
<div class="form-group">
<%= password_field_tag :password, nil, {:class=>"form-control",:placeholder=>"Password"}%>  
</div>
<div class="form-group">
<%= submit_tag "Log in",{:class=>"btn btn-primary"} %>
</div>
<%end%>